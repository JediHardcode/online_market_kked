            <column name="F_CREATED" type="DATETIME"/>
            <column name="F_HIDDEN" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

    <changeSet id="FK USER REVIEW" author="derynem@gmail.com">
